<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardCornerRadius="30dp"
    android:id="@+id/studyMaterialItem">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/document_material"
        android:layout_margin="10dp"
        android:id="@+id/materialType"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/materialType"
        android:text="Title"
        android:layout_alignTop="@id/materialType"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/materialTitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/materialTitle"
        android:layout_toEndOf="@id/materialType"
        android:layout_marginStart="10dp"
        android:text="Study Material Description"
        android:id="@+id/materialDescription"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>